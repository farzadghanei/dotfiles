# Personal i3 config file.
# based on config auto-generated by i3-config-wizard(1).

include $HOME/.config/i3/config-base

# color theme from: https://gitlab.com/manzerbredes/i3-colors/-/blob/master/themes/mate
# colors:
set  $darkgreen #264215
set  $green #526532
set  $lightgreen #a4cb64
set  $darkgrey #3c3b37
set  $grey #4c4c4c
set  $lightgrey #aea79f
set  $black #000000
set  $white #ffffff
set  $red #ff0000

# target                 title          bg              text            indicator       border
client.focused           $lightgreen    $green          $white          $lightgreen     $green
client.focused_inactive  $lightgrey     $darkgrey       $white          $lightgrey      $lightgrey
client.unfocused         $lightgrey     $darkgrey       $white          $lightgrey      $lightgrey
client.urgent            $lightgreen    $darkgreen      $white          $lightgreen     $green
client.placeholder       $darkgrey      $darkgrey       $white          $darkgrey       $darkgrey
client.background        $darkgrey

# application shortcuts
bindsym Ctrl+Mod1+l exec i3lock --color 264215

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status -c $HOME/.config/i3status/config-personal
    tray_output primary
    font pango:Hack 10
    separator_symbol " ‚ùô "
    colors {
        background $black
        statusline $lightgreen
        separator  $darkgreen

        #                  border      bg       text
        focused_workspace  $lightgreen  $green   $white
        active_workspace   $darkgreen   $black   $lightgreen
        inactive_workspace $darkgrey    $blackk  $lightgreen
        urgent_workspace   $lightgreen  $green   $lightgreen
        binding_mode       $darkgrey    $green   $lightgreen
    }
}
